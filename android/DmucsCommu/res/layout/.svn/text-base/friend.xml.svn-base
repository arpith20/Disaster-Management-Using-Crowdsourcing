<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    >
    <Button
    	android:id="@+id/myFriends"
		android:text="My Friends"
		android:layout_marginLeft="70dip"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:layout_marginTop="5dip"
		android:onClick="showFriendList"
		>
	</Button>
 	<Button 
		android:text="All Members"
		android:layout_toRightOf="@id/myFriends"
		android:layout_marginLeft="5dip"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:layout_marginTop="5dip"
		android:onClick="showMemberList"
		>
	</Button>
	<TextView
			android:id="@+id/friends"
			android:layout_below="@id/myFriends"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="16dp"
			android:text="My Friends"
			android:textColor="#eee"
			android:background="#6ec7fa"
			android:padding="3dip"
	></TextView>
 	<ListView
 		android:id="@+id/friendList"
 		android:layout_below="@id/friends"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:divider="#aaa"
		android:dividerHeight="1dip"
 	></ListView>
 	
	<TextView
			android:id="@+id/Members"
			android:layout_width="fill_parent"
			android:layout_below="@id/myFriends"
			android:layout_height="wrap_content"
			android:textSize="16dp"
			android:text="All Members"
			android:textColor="#eee"
			android:background="#6ec7fa"
			android:padding="3dip"
	></TextView>
 	<ListView
 		android:id="@+id/memberList"
 		android:layout_below="@id/Members"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:divider="#aaa"
		android:dividerHeight="1dip"
 	></ListView>
</RelativeLayout>
