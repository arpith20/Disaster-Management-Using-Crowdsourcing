<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:color="@android:color/holo_blue_bright"
                android:width="1dp" />
            <solid android:color="@android:color/transparent" />
            <corners 
            android:radius="8dp" />

        <padding 
            android:bottom="10dp" 
            android:left="50dp" 
            android:right="50dp" 
            android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:color="@android:color/white"
                android:width="1dp" />
            <solid android:color="@android:color/transparent" />
            <corners 
            android:radius="8dp" />

        <padding 
            android:bottom="10dp" 
            android:left="50dp" 
            android:right="50dp" 
            android:top="10dp" />
        </shape>
    </item>
</selector>